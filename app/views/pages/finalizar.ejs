<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Finalizar Compra - DOP</title>
    <link rel="stylesheet" href="/css/dop.css">
</head>
<body>
    <header class="main-header">
        <nav class="nav-container">
            <a href="/" class="brand-logo">
                <img src="/imagens/dopimg.png" alt="DOP Logo" class="logo-image">
            </a>
            <h1 class="page-title">Finalizar Compra</h1>
        </nav>
    </header>

    <main class="main-content">
        <div class="checkout-container">
            <div class="resumo-pedido">
                <h2 class="section-title">Resumo do Pedido</h2>
                <div class="itens-lista">
                    <% carrinho.forEach(item => { %>
                    <div class="item-checkout">
                        <div class="item-info">
                            <h4><%= item.nome %></h4>
                            <p>Quantidade: <%= item.quantidade %></p>
                        </div>
                        <div class="item-preco">
                            <span>R$ <%= (item.preco * item.quantidade).toFixed(2) %></span>
                        </div>
                    </div>
                    <% }); %>
                </div>
                <div class="total-pedido">
                    <h3>Total: R$ <%= totalPreco.toFixed(2) %></h3>
                </div>
            </div>
            
            <div class="pagamento-section">
                <h2 class="section-title">Forma de Pagamento</h2>
                <button id="btn-mercado-pago" class="btn-mercado-pago">
                    <img src="https://http2.mlstatic.com/storage/logos-api-admin/a5f047d0-9be0-11ec-aad4-c3381f368aaf-m.svg" alt="Mercado Pago">
                    <span>Pagar com Mercado Pago</span>
                </button>
            </div>
        </div>
    </main>


    <script src="js/finalizar.js"></script>
</body>
</html>
